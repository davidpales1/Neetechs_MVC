                      </a>  
                       @*<a href="/Posts/Details/@item.Id">
                          @Html.DisplayFor(modelItem => item.Name)
                      </a>*@
             

                <div class="pull-right dropdown">
                        <button href="#PostList-@item.Id" type="button" class="nav-link btn btn-link text-dark"
                        data-bs-toggle="dropdown">
