@model IEnumerable<Neetechs_MVC.Models.Post>

<div class="row">
    @foreach (var item in Model)
    {
        <!-- Category Card -->
        <div class="col-md-12">
            <div class="col card-head"> 
                      <a href="/Profile/Details/@item.UserId">
