@model IEnumerable<Neetechs_MVC.Models.Category>
    <div class="list-group list-group-flush border-bottom scrollarea" style="height:90vh;">
            @foreach (var item in Model) {
    
               <a asp-action="Details" asp-route-id="@item.Id" class="list-group-item list-group-item-action py-3 lh-tight" aria-current="true">
            <div class="d-flex w-100 align-items-center justify-content-between">
                <strong class="mb-1">@Html.DisplayFor(modelItem => item.Name)</strong>
                <small>Wed</small>
            </div>
            <div class="col-10 mb-1 small">Some placeholder content in a paragraph below the heading and date.</div>
        </a>
            }
     
    </div>