@model IEnumerable<Neetechs.Model.Product>

@{
    ViewData["Title"] = "Products List";
}
<form asp-controler="Products" asp-action="Index">
    <p>Search for brand</p>
    <div class="form-group">
         <input type="text" class="form-control" placeholder="Search for product" name="search" onkeyup="searchProducts(value)"/>

    </div>
@*    <input type="submit" name="search" />
*@</form>
<article id="productSearchTable" class="table">

</article>
<div class="justify-content-center text-center" style="position: fixed;bottom:0px; right:25%;">
    <a asp-action="Create" class="btn ">Add Product  +</a>
</div>

<script>
    window.onload = function (){
        searchProducts()
    }
    function searchProducts(value){
        $.ajax({
            type:'GET',
            url:'/Products/Search/',
            data:{"search": value},
            dataType:'text',
            success:function(data){
                $('#productSearchTable').html(data);
            }

        })
    }
 </Script>